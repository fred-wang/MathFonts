if [ $# -eq 0 ]
then
   echo "usage: $0 font-file"
   exit 1
fi

FONTFILE=$1
FONTNAME=`echo $FONTFILE | @SED@ 's/\.[a-z]\+//'`

for flavor in woff woff2; do
    @PYFTSUBSET@ $FONTFILE \
                 --output-file=$FONTNAME.$flavor \
                 --flavor=$flavor \
                 --glyphs=* \
                 --layout-features=*
done
